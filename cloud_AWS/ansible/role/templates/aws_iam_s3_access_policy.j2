{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Effect": "Allow",
{% if rw_s3_access is sameas true %}
      "Action": "s3:*",
{% else %}
      "Action": [
        "s3:Get*",
        "s3:List*"
      ],
{% endif %}
      "Resource": [
{% for v in vpc_id_list %}
        "arn:aws:s3:::{{ s3_bucket_prefix }}-{{ v }}-flow-logs{{ '/' + s3_bucket_path if s3_bucket_path }}/",
        "arn:aws:s3:::{{ s3_bucket_prefix }}-{{ v }}-flow-logs{{ '/' + s3_bucket_path if s3_bucket_path }}/*"{{ ',' if not loop.last else '' }}
{% endfor %}
      ]
    }
  ]
}
